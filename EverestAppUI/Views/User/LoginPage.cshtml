@using DomainLayer.DTOs.User
@model LoginViewModel
@{
    ViewData["Title"] = "صفحه ورود";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<body dblueue="rtl">
    <div class="container-fluid bg-white p-0 ">

        <!-- Start Spinner  -->
        @Html.Partial("_Spinner")
        <!-- End Spinner -->

    <!-- Start login -->
    <section class="ftco-section mt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                        @if (@ViewData["message"] != null)
                        {
                            <div class="alert alert-warning">
                                <p>@ViewData["message"]</p>
                            </div>
                        }

                        @if (ViewBag.IsSuccess == true)
                        {
                             <div class="alert alert-success">
                                <p class="help-block">ورود شما با موفقیت انجام شد.</p>
                            </div>

                            <script>
                                // Your delay in milliseconds
                                var delay = 3000; 
                                setTimeout(function () { window.location = "https://localhost:7154"; }, delay);
                             </script>
                        }
                        <h1 class="mb-3">ورود به سایت باشگاه</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <form asp-controller="User" asp-action="LoginPage" enctype="multipart/form-data" class="signin-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for = "Email" type="text" class="form-control mt-3" placeholder="ایمیل" required>
                                <span asp-validation-for= "Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" id="password-field" type="password" class="form-control mt-2" placeholder="رمز عبور" required>
                                <span asp-validation-for= "Password" class="text-danger"></span>
                                <span toggle="#password-field" class="fa fa-eye field-icon eye-icon toggle-password"></span>
                            </div>
                            <div class="form-group d-flex  mt-2">
                                <div class="d-flex">
                                    <label class="checkbox-wrap checkbox-primary">به خاطر سپردن
                                        <input asp-for="RememberMe" type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 mx-4">
                                    <a asp-controller="User" asp-action="ForgotPassword" style="color: #blue">رمز عبورم را فراموش کردم!!!</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary BTN-PANEL submit px-3">ورود</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end login -->

    <!-- start Contact -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="bg-light rounded p-3">
                    <div class="bg-white rounded p-4" style="border: 1px dashed rgba(0, 185, 142, .3)">
                        <div class="row g-5 align-items-center">
                            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                                <img class="img-fluid rounded w-100" src="/img/call-to-action.jpg" alt="Contact Support">
                            </div>
                            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                                <div class="mb-4">
                                    <h1 class="mb-3">تماس با پشتیبانی</h1>
                                    <p>برای ارتباط با مشاوران و تیم ما</p>
                                </div>
                                <a href="#" class="btn btn-primary BTN-PANEL py-3 px-4 me-2">
                                    <i class="fa fa-phone-alt me-2"></i>تماس تلفنی
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end Contact -->
</body>

</html>